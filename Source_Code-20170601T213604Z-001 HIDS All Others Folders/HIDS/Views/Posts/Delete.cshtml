@model CTL.Models.Post

@{
    ViewBag.Title = "Delete";
}

<style type="text/css">
    body {
        background-color: #fff;
    }
</style>


<h2>Delete</h2>

<h3>Are you sure you want to delete this opportunity?</h3>
<hr />

    
    <div class="display-field"><h3>@Model.PostTitle</h3></div>

    

    <div class="display-label">CreatedBy: @Model.CreatedBy</div>
    

@using (Html.BeginForm()) {
    <br />
    <div class="modal-footer">
        <input class="btn btn-danger" type="submit" value="Delete" /> 
        @Html.ActionLink("Close", "Details", new { Controller = "Organizations", id = @ViewBag.OrganizationID }, new { @class = "btn btn-default" })
        </div>
}


