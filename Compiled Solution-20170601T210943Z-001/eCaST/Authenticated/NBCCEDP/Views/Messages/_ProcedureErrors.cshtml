@model IEnumerable<eCaST.ViewModels.MessageViewModel>

@{
    ViewBag.Title = "Index";
}




<div class="btn-group" role="group" aria-label="...">

    @foreach (var item in Model)
    {

     

        <button type="button" class="btn btn-default">

            @if (item.MessageTypeBinID == 1)
            {



                <div style="background-color:#289916;border-radius:5px;padding:6px;color:#fff;">


                    <div class="row">



                        <div class="col-md-12"><i class="fa fa-exclamation-circle fa-1x" aria-hidden="true"></i>&nbsp;@item.MessageName</div>

                    </div>

                </div>





            }
            else if (item.MessageTypeBinID == 2)
            {

                <div style="background-color:orange;border-radius:5px;padding:6px;color:#fff">


                    <div class="row">



                        <div class="col-md-12"><i class="fa fa-exclamation-circle fa-1x" aria-hidden="true"></i>&nbsp;&nbsp;@item.MessageName</div>

                    </div>

                </div>



            }
            else
            {


                <div style="background-color:#2084b0;border-radius:5px;padding:6px;color:#fff">


                    <div class="row">



                        <div class="col-md-12"><i class="fa fa-exclamation-circle fa-1x" aria-hidden="true"></i>&nbsp;@item.MessageName</div>

                    </div>

                </div>




            }
        </button>


    
    }

</div>



