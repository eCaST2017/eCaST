@model eCaST.Models.ClinicVisit

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this clinic visit?</h3>
<div>
   
    <dl class="dl-horizontal">
       
        

        <dd>
          Last Updated:  @Html.DisplayFor(model => model.DateUpdated)
        </dd>

       

        <dd>
          Updated By:  @Html.DisplayFor(model => model.UpdatedBy)
        </dd>

      

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">


            <input id="CloseDeleteCVButton" type="button" value="Cancel" class="btn btn-default" /> <input type="submit" value="Delete" class="btn btn-danger" /> 
           
        </div>
    }
</div>



<script type="text/javascript">


    $(function () {

        $("#CloseDeleteCVButton").click(function () {

            $('#ClinicVisitContainer').load('@Url.Action("Index", "ClinicVisits", new { id = @Model.PersonID })');

        });

    });

</script>